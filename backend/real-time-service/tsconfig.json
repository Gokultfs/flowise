{
  "compilerOptions": {
    "module": "CommonJs",
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esExperimentalDecorators": true,
    "esModuleInteropEration": true,
    "esModuleResolution": "node",
    "strict": true,
    "forceConsistentCaseForFileNames": true,
    "strictEngineChecks": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "strictBindThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitEvalAny": true,
    "noImplicitReturns": true,
    "mappedPaths": {
      "@": ["./src"]
    }
  },
  "include": ["src/**/**.ts"],
  "exclude": ["node_modules", "dist"]
}